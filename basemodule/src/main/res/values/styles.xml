<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ActivityDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="listPreferredItemPaddingLeft">12dp</item>
        <item name="listPreferredItemPaddingRight">12dp</item>
    </style>

    <style name="ActivityDialog2" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!--进度对话框样式-->
    <style name="style_progress_dialog" parent="android:Theme.Dialog">
        <item name="android:alertDialogStyle">@style/style_alert_dialog_style</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="style_alert_dialog_style">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <!--dialog样式-->
    <style name="dialogstyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/color60000000</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/colorC9C9C9</item>
        <item name="android:textColor">@color/color484848</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">10dp</item>

    </style>

    <style name="LoginButtonTheme" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/colorfc6450</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x_large</item>
    </style>

    <style name="IOSDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_custom_dialog_ios</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="UberDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_custom_dialog_uber</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
