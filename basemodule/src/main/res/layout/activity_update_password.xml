<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorefeff4"
              android:orientation="vertical"
              tools:context="com.sudao.basemodule.basicapi.activity.UpdatePasswordActivity">

    <include layout="@layout/toolbar_with_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<TextView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="12dp"-->
        <!--android:text="原密码"-->
        <!--android:textSize="@dimen/large"/>-->

        <EditText
            android:id="@+id/edt_old_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入原登录密码"
            android:paddingLeft="10dp"
            android:textColor="@color/colorbcbbbb"
            android:textColorHint="@color/colorbcbbbb"
            android:textSize="@dimen/large"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.4dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<TextView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="12dp"-->
        <!--android:text="新密码"-->
        <!--android:textSize="@dimen/large"/>-->

        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入新登录密码"
            android:paddingLeft="10dp"
            android:textColor="@color/colorbcbbbb"
            android:textColorHint="@color/colorbcbbbb"
            android:textSize="@dimen/large"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.4dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<TextView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="12dp"-->
        <!--android:text="确认新密码"-->
        <!--android:textSize="@dimen/large"/>-->

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="再次确认新登录密码"
            android:paddingLeft="10dp"
            android:textColor="@color/colorbcbbbb"
            android:textColorHint="@color/colorbcbbbb"
            android:textSize="@dimen/large"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update_password"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_login"
        android:text="完成"
        android:textColor="@color/color1E1E1E"
        android:textSize="16sp"/>


</LinearLayout>
